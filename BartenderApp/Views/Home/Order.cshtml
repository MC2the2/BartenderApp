@model IEnumerable<Cocktail>
@{
    ViewBag.Title = "All Orders";
    Layout = "_ALayout";
}
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th class="text-right">Name</th>
        <th>Customer Name/th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.Name</td>
            <td>@item.CustomerName</td>
            <td class="text-right">@item.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Edit" method="get">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-cocktailId="@item.CocktailID">
                        Edit
                    </a>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Order</a>
</div>
<div class="text-center">
    <a asp-action="Index" class="btn btn-primary">Home</a>
</div>